@model Models.Models.ViewModels.SetTokenViewModel
@{
    ViewBag.Title = "تنظیمات توکن";
    Layout = "~/Areas/MainPanel/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("SetToken", "Account", FormMethod.Post, new { @class = "form form-horizontal striped-rows" }))
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-body">
            <div class="form-group row">
                @Html.LabelFor(Model => Model.Token, new { @class = "col-md-3 label-control" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Token, new { htmlAttributes = new { @class = "form-control", placeholder = "توکن دریافتی از کارگزاری را در این محل قرار دهید ..." } })
                    @Html.ValidationMessageFor(model => model.Token, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-actions center">

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check-square-o"></i>ذخیره
                </button>
            </div>
        </div>
        }
    </div>
</div>

