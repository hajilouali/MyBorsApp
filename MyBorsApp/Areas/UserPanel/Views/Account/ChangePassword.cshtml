@model Models.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "تغییر رمز عبور";
    Layout = "~/Areas/MainPanel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Success == true)
{
    <div class="alert alert-success" id="alertsuccess">
        <p>عملیات تغییر رمز عبور با موفقیت انجام شده </p>
    </div>
    
}
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form form-horizontal striped-rows" }))
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-body">
                <div class="form-group row">
                    @Html.LabelFor(Model => Model.OldPassword, new { @class = "col-md-3 label-control" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "رمز عبور فعلی" } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(Model => Model.Password, new { @class = "col-md-3 label-control" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "رمز عبور جدید" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(Model => Model.RePassword, new { @class = "col-md-3 label-control" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", placeholder = "تکرار رمز عبور" } })
                        @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-actions center">

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check-square-o"></i>ذخیره
                    </button>
                </div>
            </div>
        }
    </div>
</div>
@section Header
{
    <link href="~/app-assets/vendors/css/extensions/toastr.css" rel="stylesheet" />
    <link href="~/app-assets/css-rtl/plugins/extensions/toastr.css" rel="stylesheet" />
}
@section foter
{
    <script src="~/app-assets/vendors/js/extensions/toastr.min.js"></script>
    <script>
        
        $(document).ready(function () {
            $("#alertsuccess").fadeOut( 4000 );
        });

    </script>
}
